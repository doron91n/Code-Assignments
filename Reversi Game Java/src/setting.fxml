<?xml version="1.0" encoding="UTF-8"?>

<!-- 
/**
 * settings.fxml - sets application game settings window components layout.
 *
 */
 -->

<?scenebuilder-stylesheet Dark.css?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="setting" prefHeight="400" prefWidth="400" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SettingController">
  <children>
      <Text fx:id="game_settings_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Settings" textAlignment="CENTER">
         <StackPane.margin>
            <Insets bottom="400.0" />
         </StackPane.margin>
      </Text>
      <Text fx:id="board_size_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Board Size:" textAlignment="CENTER" GridPane.rowIndex="2">
         <StackPane.margin>
            <Insets bottom="200.0" right="200.0" />
         </StackPane.margin></Text>
      <Text fx:id="opening_player_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Opening Player:" textAlignment="CENTER">
         <StackPane.margin>
            <Insets bottom="100.0" right="200.0" />
         </StackPane.margin>
      </Text>
      <Text fx:id="player_1_color_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Player 1 Color:" textAlignment="CENTER">
         <StackPane.margin>
            <Insets right="200.0" />
         </StackPane.margin>
      </Text>
      <Text fx:id="player_2_color_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Player 2 Color:" textAlignment="CENTER">
         <StackPane.margin>
            <Insets right="200.0" top="100.0" />
         </StackPane.margin>
      </Text>
      <Text fx:id="settings_msg_text" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="364.0">
         <StackPane.margin>
            <Insets top="200.0" />
         </StackPane.margin>
      </Text>
    <Button mnemonicParsing="false" onAction="#backToMenu" prefHeight="40.0" prefWidth="150.0" text="Back to menu">
         <StackPane.margin>
            <Insets right="200.0" top="300.0" />
         </StackPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#saveSettings" prefHeight="40.0" prefWidth="150.0" text="Save Settings">
         <StackPane.margin>
            <Insets left="200.0" top="300.0" />
         </StackPane.margin>
      </Button>
      <ComboBox fx:id="opening_player" prefHeight="40.0" prefWidth="150.0">
         <StackPane.margin>
            <Insets bottom="100.0" left="200.0" />
         </StackPane.margin>
      </ComboBox>
      <ComboBox fx:id="board_size" prefHeight="40.0" prefWidth="150.0">
         <StackPane.margin>
            <Insets bottom="200.0" left="200.0" />
         </StackPane.margin>
      </ComboBox>
      <ComboBox fx:id="player_1_color" prefWidth="150.0">
         <StackPane.margin>
            <Insets left="200.0" />
         </StackPane.margin>
      </ComboBox>
      <ComboBox fx:id="player_2_color" prefWidth="150.0">
         <StackPane.margin>
            <Insets left="200.0" top="100.0" />
         </StackPane.margin>
      </ComboBox>
      <Circle fx:id="player_1_color_displayer" radius="20.0" stroke="TRANSPARENT" strokeType="INSIDE">
         <StackPane.margin>
            <Insets right="15.0" />
         </StackPane.margin>
      </Circle>
      <Circle fx:id="player_2_color_displayer" radius="20.0" stroke="TRANSPARENT" strokeType="INSIDE">
         <StackPane.margin>
            <Insets right="15.0" top="100.0" />
         </StackPane.margin>
      </Circle>
  </children>
</StackPane>
