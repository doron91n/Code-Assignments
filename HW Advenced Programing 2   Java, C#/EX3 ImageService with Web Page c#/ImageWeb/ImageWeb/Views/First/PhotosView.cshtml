@model ImageWeb.Models.PhotosModel

@{
    ViewBag.Title = "PhotosView";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        img {
            height: 200px;
            width: 50%;
            border-radius: 50%;
            border-color: burlywood;
        }

        .btn btn-primaryP {
            color: blue;
        }

        .btn btn-default {
            color: red;
        }
        .row{
            width:80%;
        }
    </style>
</head>
<body>
    <div class="row">
        @{
            foreach (var p in Model.Photos) {
                <div class="col-sm-6 col-md-4">    
                    <div class="thumbnail">          
                        <img src="~/@p.OutPutDirName/Thumbnails/@p.getYear/@p.getMonth/@p.ImgName" />      
                        <div class="caption">                    
                            <h3>Thumbnail label</h3>  
                            <p> @p.ImgName </p> 
                            <p> Month: @p.getMonth</p>               
                            <p> Year: @p.getYear </p> 
                            <p>
                            @Html.ActionLink("View", "PhotoRealSize", new { path = p.ImgPath }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "DeletePhoto", new { path = p.ImgPath }, new { @class = "btn btn-default" })
                            </p>   
                        </div>       
                    </div>
                </div>
            }
        }
    </div>

    
</body>

</html>